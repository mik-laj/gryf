{% extends "base.html.twig" %}

{#{% trans_default_domain 'FOSUserBundle' %}#}

{% block body %}
    <div class="container" style="padding-top:78px">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3>Logowanie</h3>
                    </div>
                    <div class="panel-body">
                        {% for m in app.session.flashbag.get('notice') %}
                            <div class="alert alert-success">{{ m }}</div>
                        {% endfor %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <div class='form'>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <div class="form-group col-md-6">
                                            <input type="text" name="_username" placeholder="Login" class="form-control" />
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="password" name="_password" placeholder="HasÅ‚o" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12" style="margin-top:1em">
                                        <div class="form-group col-md-12 text-center">
                                            Dla kumatych <input type="checkbox" name="_remember_me" value="on" />
                                        </div>
                                        <div class="form-group col-md-12">
                                            {#{{ form_widget(form) }}#}
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                            <input type="submit"  name="_submit" class="btn btn-danger btn-lg btn-block" value="{{ 'Login'|trans }}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
