<div class="panel panel-danger">	
    <div class="panel-heading">
        MENU
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked">
            {% for pos in submenu %}
                {% if pos.articles|length == 0 %}
                    <li role="presentation" class="disabled"><a>{{pos.name}}</a></li>
                {% elseif pos.articles|length == 1 %}
                    {% for art in pos.articles %}
                    <li role="presentation" class="po"><a href="{{ path('art_view', {"art":art.id, "bip":pos.bip.id}) }}">{{pos.name}}</a>     
                    {% endfor %}

                {% elseif pos.articles|length > 1 %}
                    <li class="panel-group nav">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <a data-toggle="collapse" href="#{{pos.id}}">
                                    {{pos.name}}<i class="fa fa-spin fa-chevron-down"></i>
                                </a>
                            </div>
                            <div id="{{pos.id}}" class="panel-collapse collapse nav">
                                <ul class="list-group nav nav-stacked nav-pills">
                                {% for art in pos.articles %}
                                    <li class="list-group-item">
                                        <a href="{{ path('art_view', {'art':art.id, 'bip':pos.bip.id}) }}">{{art.title}}</a>
                                    </li>
                                {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </li> <!-- item groups -->
                {% endif %}
    </div>
</div>