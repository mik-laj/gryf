{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}
{% block body %}

    {% include "user/header.html.twig" %}

    {#<div class="fos_user_user_show">#}
    {#<p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>#}
    {#<p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>#}
    {#</div>#}
    <div class="container index-container">
        <div class="index-container">
            <div class="row">
                <div class="col-md-3">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            MENU
                        </div>
                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">jeden</a></li>
                                <li role="presentation" class="dropdown"><a data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">dwa<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>2.1</li>
                                        <li>2.2</li>
                                    </ul>
                                </li>
                                <li role="presentation" class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        Dropdown <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        ...
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            treść
                        </div>
                        <div class="panel-body">
                            {% for m in app.session.flashbag.get('notice') %}
                                <div class="alert alert-success">{{ m }}</div>
                            {% endfor %}
                            <table class="table table-hover table-stripped table-condensed">
                                <tr>
                                    <th>Pozycja</th>
                                    <th>Nazwa</th>
                                </tr>
                                {% for sub in menu %}
                                <tr>
                                    <td>{{ sub.position }}</td>
                                    <td>{{ sub.name }}</td>
                                </tr>
                                {% endfor %}
                            </table>
                            <div class="row">
                                    {{ form_start(form) }}
                                    <div class="col-md-2">
                                        <h4>Nowe menu</h4>
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_widget(form.name, { 'attr': {'placeholder':'Nazwa', 'class':'form-control'} }) }}
                                    </div>
                                    <div class="col-md-4">
                                        {#{{ form_widget(form) }}#}
                                        {{ form_widget(form.save, { 'attr': {'class':'btn btn-danger btn-block'} }) }}
                                        {{ form_widget(form._token) }}
                                    </div>
                                    {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
