{% extends 'base.html.twig' %}

{% block body %}
    {% include 'master/header.html.twig' %}
    <div class="container">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Edycja BIPu
            </div>
            <div class="panel-body">
                {% for m in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">{{ m }}</div>
                {% endfor %}
                <div class="row">
                    {{ form_start(form) }}
                    <div class="col-md-8">
                        <div class="{% if(form_errors(form.name)) %} has-error {% endif %}">
                            {{ form_widget(form.name, { 'attr': {'placeholder': 'nazwa BiPu', 'class':'form-control'} }) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="col-md-2">
                          <div class="{% if(form_errors(form.url)) %} has-error {% endif %}">
                            {{ form_widget(form.url, { 'attr': {'placeholder': 'url', 'class':'form-control'} }) }}
                            {{ form_errors(form.url) }}
                        </div>
                    </div>
                    <div class="col-md-2">
                        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-danger btn-block'} } ) }}
                        {{ form_widget(form._token) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}