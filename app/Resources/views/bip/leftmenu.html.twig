<div class="panel panel-danger">	
    <div class="panel-heading">
        MENU
    </div>
    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked">
            {% for pos in submenu %}
                {% if pos.articles|length == 0 %} {# sprawdzasz, czy jest więcej niż 0 artykułóœ dla danego submenu #}
                    <li role="presentation" class="disabled"><a>{{pos.name}}</a></li>

                {% elseif pos.articles|length == 1 %}
                    {% for art in pos.articles %}
                    <li role="presentation"><a href="{{ path('art_view', {"art":art.id, "bip":pos.bip.id}) }}">{{pos.name}}</a>     
                    {% endfor %}

                {% elseif pos.articles|length > 1 %}
                        {# <li role="presentation" class="dropdown"><a data-toggle="dropdown" href="#" 
                        role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">
                        {{pos.name}}<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% for art in pos.articles %}
                                    <li><a href="{{ path('art_view', {"art":art.id, "bip":pos.bip.id}) }}">{{art.title}}</a></li>
                                {% endfor %}
                            </ul>
                        </li><!-- Pillsy --> #}
                        <li class="panel-group nav">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a data-toggle="collapse" href="#colla">
                                        {{pos.name}}<span class="caret"></span>
                                    </a>
                                </div>
                                <div id="colla" class="panel-collapse collapse nav">
                                    <ul class="list-group nav nav-stacked nav-pills">
                                    {% for art in pos.articles %}
                                        <li class="list-group-item"><a href="{{ path('art_view', {"art":art.id, "bip":pos.bip.id}) }}">{{art.title}}</a></li>
                                    {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </li> <!-- item groups -->
                {% endif %}
                {# <li>
                    <a href="{{pos.id}}">{{pos.name}}</a>
                </li> #}

            {% endfor %}
        </ul>
    </div>
</div>