{% extends 'base.html.twig' %}
{% block body %}
    <div class="container" style="padding-top:78px">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3>Rejestracja</h3>
                    </div>
                    <div class="panel-body">
                        {% for m in app.session.flashbag.get('notice') %}
                            <div class="alert alert-success">{{ m }}</div>
                        {% endfor %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                            <div class='form'>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <div class="form-group col-md-6">
                                            <div class="{% if(form_errors(form.email)) %} has-error {% endif %}">
                                                {{ form_widget(form.email, { 'attr': {'placeholder': 'e-mail', 'class':'form-control'} }) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="{% if(form_errors(form.username)) %} has-error {% endif %}">
                                                {{ form_widget(form.username, { 'attr': {'placeholder': 'nazwa użytkownika', 'class':'form-control'} }) }}
                                                {{ form_errors(form.username) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <div class="form-group col-md-6">
                                               <div class="{% if(form_errors(form.plainPassword.first)) %} has-error {% endif %}">
                                                 {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'hasło', 'class':'form-control'} }) }}
                                                 {{ form_errors(form.plainPassword.first) }}
                                                </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="{% if(form_errors(form.plainPassword.second)) %} has-error {% endif %}">
                                                 {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'powtórz hasło', 'class':'form-control'} }) }}
                                                 {{ form_errors(form.plainPassword.second) }}
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <div class="col-md-3">
                                            <div class="{% if(form_errors(form.bip.url)) %} has-error {% endif %}">
                                                 {{ form_widget(form.bip.url, { 'attr': {'placeholder': 'url', 'class':'form-control'} }) }}
                                                 {{ form_errors(form.bip.url) }}
                                                </div>
                                        </div>
                                        <div class="col-md-9">
                                             <div class="{% if(form_errors(form.bip.name)) %} has-error {% endif %}">
                                                 {{ form_widget(form.bip.name, { 'attr': {'placeholder': 'nazwa bipu', 'class':'form-control'} }) }}
                                                 {{ form_errors(form.bip.name) }}
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12" style="margin-top:1em">
                                        <div class="form-group col-md-12">
                                            {{ form_widget(form) }}
                                            <input type="submit" class="btn btn-danger btn-lg btn-block" value="{{ 'Rejestruj'|trans }}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{form_end(form)}}

{% endblock %}
